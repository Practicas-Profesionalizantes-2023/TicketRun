    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const crearEventoBtn = document.getElementById('crearEventoBtn');
            const editarEventoBtn = document.getElementById('editarEventoBtn');
            const borrarEventoBtn = document.getElementById('borrarEventoBtn');
            
            crearEventoBtn.addEventListener('click', function() {
                console.log("Botón 'Crear Evento' clickeado");
            });
            
            editarEventoBtn.addEventListener('click', function() {
                console.log("Botón 'Editar Evento' clickeado");
            });
            
            borrarEventoBtn.addEventListener('click', function() {
                console.log("Botón 'Borrar Evento' clickeado");
            });
        });
    </script>